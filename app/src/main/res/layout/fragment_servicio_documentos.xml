<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".servicio_documentos"
    android:id="@+id/view_docu">

        <RelativeLayout
            android:id="@+id/view_docu1"
            android:layout_width="match_parent"
            android:layout_height="186.5dp"
            android:background="@color/morado">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:background="@color/morado_fuerte"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_notas"
                    android:layout_toLeftOf="@+id/t1"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/t1"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Dependencias Servicio Social"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/Blanco"/>

                <ImageView
                    android:id="@+id/f1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_file_download_black_24dp"
                    android:layout_toRightOf="@+id/t1"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/t1" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_docu2"
            android:layout_width="match_parent"
            android:layout_height="186.5dp"
            android:layout_below="@+id/view_docu1"
            android:background="@color/verde">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:background="@color/verde_fuerte"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_folder_black_24dp"
                    android:layout_toLeftOf="@+id/t2"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/t2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Documentos Necesarios"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/Blanco"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/t2"
                    android:src="@drawable/ic_file_download_black_24dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/t2" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/regresa_docu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/view_docu3"
            android:layout_width="match_parent"
            android:layout_height="186.5dp"
            android:layout_below="@+id/view_docu2"
            android:background="@color/azul1">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:background="@color/azul3"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_folder_black_24dp"
                    android:layout_toLeftOf="@+id/t3"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/t3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:text="Reporte Final"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/Blanco"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_file_download_black_24dp"
                    android:layout_toRightOf="@+id/t3"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/t3" />
            </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>