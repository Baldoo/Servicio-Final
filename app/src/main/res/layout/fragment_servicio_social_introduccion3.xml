<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".servicio_introduccion3"
    android:id="@+id/pagina_introduccion3"
    android:background="@drawable/fondo5">

    <ImageView
        android:id="@+id/img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/confuso"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/texto3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dónde puedo realizar mi Servicio Social?\n\nLos programas internos y externos son las dos opciones donde puedes realizar tu Servicio Social.\nEn la carpeta de documentos se ecuentra un archivo que contiene todas las dependencias donde podrás realizar tu Servicio Social tanto internos como externos."
        android:layout_below="@+id/img3"
        android:padding="20dp"
        android:textSize="19sp"
        android:gravity="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_marginTop="70dp"
        android:layout_alignTop="@+id/texto3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:layout_marginTop="70dp"
        android:layout_alignTop="@+id/texto3"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selecc"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/pag3_2"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/pag3_2" />

    <ImageView
        android:id="@+id/pag3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/noselecc"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/pag3_2"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/pag3_2"/>

    <ImageView
        android:id="@+id/pag3_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/noselecc"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:id="@+id/pag3_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/pag3_2"
        android:src="@drawable/noselecc"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/pag3_2" />

</RelativeLayout>