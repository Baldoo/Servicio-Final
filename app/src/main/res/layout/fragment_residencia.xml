<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Residencia"
    android:background="@drawable/fondo5"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">

        <TextView
            android:id="@+id/res_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona una opción"
            android:textColor="@color/negro"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:textSize="35sp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginStart="15dp" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp">

        <LinearLayout
            android:id="@+id/res_op1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="@color/transparente"
            android:weightSum="10">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:rowCount="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="6dp"
                android:layout_rowWeight="7"
                android:src="@drawable/ic_create_new_folder_black_24dp"/>

                <TextView
                    android:id="@+id/res_t1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_rowWeight="3"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/negro"
                    android:text="Empezando Residencias Profesionales"/>
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/res_op2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="@color/transparente"
            android:weightSum="10">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:rowCount="2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="6dp"
                    android:layout_rowWeight="7"
                    android:src="@drawable/ic_face_black_24dp"/>

                <TextView
                    android:id="@+id/res_t2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_rowWeight="3"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/negro"
                    android:text="Proyecto Propio"/>
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/res_op3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="@color/transparente"
            android:weightSum="10">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:rowCount="2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="6dp"
                    android:layout_rowWeight="7"
                    android:src="@drawable/ic_check_box_black_24dp"/>

                <TextView
                    android:id="@+id/res_t3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_rowWeight="3"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/negro"
                    android:text="Características de Acreditación"/>
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/res_op4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="@color/transparente"
            android:weightSum="10">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:rowCount="2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_rowWeight="7"
                    android:src="@drawable/ic_person_black_24dp"/>

                <TextView
                    android:id="@+id/res_t4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_rowWeight="3"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/negro"
                    android:text="Contacto"/>
            </GridLayout>
        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/res_down"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Descargar Solicitud de Residencias Profesionales"
                android:gravity="center"
                android:textSize="17sp"
                android:clickable="true"
                android:textColor="@color/negro"
                android:focusable="true" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>